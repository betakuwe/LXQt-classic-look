/* WorldClock */
#WorldClock
{
	margin-left:		0px;
	margin-right:		2px;
	margin-bottom:		2px;
	margin-top:		2px;

	border-top:		1px solid #808080;
	border-bottom:		1px solid #ffffff;
	border-left:		0px;
	border-right:		1px solid #ffffff;
}

#WorldClockContent
{
	color:			#000000;
	padding:		5px;
}
